pipeline {
    environment {
        registry = "mootazhajji/ski-station"
        registryCredential = 'dockerhub_id'
        dockerImage = ''
    }
    agent any
    stages {
        stage('Get source Code') {
              steps {
                 script {
                    checkout([$class: 'GitSCM', branches: [[name: 'feat/moetazhajji_SAE6_G2']], userRemoteConfigs: [[url: 'https://github.com/MoetazHajji/sae6_g2_skistation-.git']]])
                 }
              }
         }
        stage('Compile with Maven') {
            steps {
                script {
                    sh 'mvn clean install'
                }
            }
        }
        stage('Login') {
                   steps {
                       script {
                          sh 'echo "Taztaz**07$$" |  docker login --username MoetazHajji  --password-stdin'
                       }
                    }
                }

        stage('Build Docker Image') {
            steps {
               script {
                   sh 'docker build -t MoetazHajji/gestion-station-ski:latest .'
                }
            }
        }
        stage('Push vers DockerHub') {
            steps {
                script {
                    sh 'docker push MoetazHajji/gestion-station-ski:latest'
                }
            }
        }
    }
    post {
    success {
        echo 'successfully.'
    }
    failure {
        echo 'Failed'
    }
    }
}