pipeline {
    environment {
        registry = "mootazhajji/ski-station"
        registryCredential = 'dockerhub_id'
        dockerImage = ''
    }
    agent any
    stages {
        stage('Get source Code') {
              steps {
                 script {
                    checkout([$class: 'GitSCM', branches: [[name: 'feat/moetazhajji_SAE6_G2']], userRemoteConfigs: [[url: 'https://github.com/MoetazHajji/sae6_g2_skistation-.git']]])
                 }
              }
         }
        stage('Compile with Maven') {
            steps {
                script {
                    sh 'mvn clean install'
                }
            }
        }
        stage('Build our Image') {
            steps {
                script {
                    docker.image('docker:20.10').inside("--privileged") {
                        // Build Docker Compose images
                        dockerImage = docker.build registry + ":$BUILD_NUMBER"
                        // Push the image to the registry
                        sh "docker login -u $DOCKERHUB_USERNAME -p $DOCKERHUB_PASSWORD"
                        sh "docker push $registry:$BUILD_NUMBER"
                        docker.withRegistry( '', registryCredential ) {
                            dockerImage.push()
                        }
                    }

                }
            }
        }
        stage('Deploy our image') {
            steps {
                script {
                    docker.withRegistry( '', registryCredential ) {
                    dockerImage.push()
                    }
                }
            }
        }
    }
    post {
    success {
        echo 'successfully.'
    }
    failure {
        echo 'Failed'
    }
    }
}