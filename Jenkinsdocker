pipeline {
    environment {
        registry = "mootazhajji/ski-station"
        registryCredential = 'dockerhub_id'
        dockerImage = ''
    }
    agent any
    stages {
        stage('Get source Code') {
              steps {
                 script {
                    checkout([$class: 'GitSCM', branches: [[name: 'feat/moetazhajji_SAE6_G2']], userRemoteConfigs: [[url: 'https://github.com/MoetazHajji/sae6_g2_skistation-.git']]])
                 }
              }
        }
        stage('Login') {
                   steps {
                       script {
                          sh 'docker login --username mootazhajji  --password Taztaz**07$$'
                       }
                    }
                }

        stage('Build Docker Image') {
            steps {
               script {
                   sh 'docker build -t mootazhajji/gestion-station-ski:latest .'
                }
            }
        }
        stage('Push vers DockerHub') {
            steps {
                script {
                    sh 'docker push mootazhajji/gestion-station-ski:latest'
                }
            }
        }
    }
    post {
    success {
        echo 'successfully.'
    }
    failure {
        echo 'Failed'
    }
    }
}