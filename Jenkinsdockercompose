pipeline {
    agent any
    environment {
           def gitRepoURL = 'https://github.com/MoetazHajji/sae6_g2_skistation-.git'
           def gitBranch  = 'feat/moetazhajji_SAE6_G2'
    }
    stages {
        stage('Clone git') {
            steps {
                script {
                     sh """
                        mkdir -p ~/git &&
                        cd ~/git &&
                        rm -rf sae6_g2_skistation- &&
                        git clone -b ${gitBranch} ${gitRepoURL}
                     """
                }
            }
        }
        stage('Stage Maven') {
            steps {
                script {
                    sh 'cd ~/git/sae6_g2_skistation- && mvn clean install -DskipTests'
                }
            }
        }
       stage('Stage Doker-Compose') {
            steps {
                script {
                    sh """
                    cd ~/git/sae6_g2_skistation- &&
                    docker compose down &&
                    docker rmi -f gestion-station-ski &&
                    docker compose up -d
                    """
                    }
            }
        }
    }

    post {
        success {
            echo 'Successfully.'
        }
        failure {
            echo 'Failed'
        }
    }
}